{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": false,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "watch": true
  },
  "include": ["./scripts/**/*"],
  "exclude": ["./node_modules/**/*"],
}